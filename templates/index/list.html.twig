{%  extends "base.html.twig" %}

{%  block body  %}
    <table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>#</th>
        <th>ID</th>
        <th>Name</th>
        <th>Evolution</th>
        <th>Experience</th>
        <th>Action</th>
    </tr>
    </thead>

    <tbody>
    {% set i=1 %}
    {% for poke in pokemons %}

        <tr>
            <td>{{ i }}</td>
            <td>{{ poke.id }}</td>
            <td>{{ poke.name }}</td>
            <td>{{ poke.evolution }}</td>
            <td>{{ poke.expe }}</td>
            <td><a href="{{path("train",{ id:poke.id}) }}"  class="btn btn-success">ready to train!</a>
                <a href="{{path("fight",{ id:poke.id}) }}"  class="btn btn-success">ready to fight!</a></td>
            {% set i= i + 1 %}
        </tr>

    {% endfor %}
<tr>
    <h1>Pokemon's list</h1>
    <h3>You've got {{ i -1}} pokemons! Train to get them strong!</h3>
{%  endblock %}